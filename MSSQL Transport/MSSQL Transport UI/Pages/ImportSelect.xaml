<Page x:Class="MSSQLTransportUI.Pages.ImportSelect"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MSSQLTransportUI.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ImportSelect">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        
        <Label Grid.Row="0" Grid.Column="0" Content="{StaticResource file}" />
        <TextBox Grid.Row="0" Grid.Column="1" Name="txtPath" />
        <Button Grid.Row="0" Grid.Column="2" Content="{StaticResource browse}" MinWidth="30" Click="btnBrowse_Click" />

        <Button Grid.Row="1" Grid.Column="2" Content="{StaticResource select}" HorizontalAlignment="Right" Click="btnContinue_Click" />
    </Grid>
</Page>
